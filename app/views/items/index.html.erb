<h1 class="page-title">Inventory Manager</h1>
<div class="top-bar">
  <%= link_to "Add New Item", new_item_path, class: "btn-primary" %>
</div>
<div class="inventory-grid">
  <% @items.each do |item| %>
    <div class="inventory-card">
      <div class="card-header">
        <%= link_to item.name, item_path(item), class: "item-name" %>
      </div>
      <div class="card-body">
        <p class="stock">
          Stock: 
          <span class="<%= 'low' if item.low_stock? %>">
            <%= item.current_stock %>
          </span>
        </p>
        <% if item.low_stock? %>
          <div class="alert">
            âš  Restock Immediately
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= link_to "Delete", item_path(item),
          class: "btn-danger",
          data: { turbo_method: :delete,
                  turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>